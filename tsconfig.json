{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    // "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/domain/consultation/MockConsultation.ts"
  ],
  "exclude": ["node_modules", "scripts", "migrations", "build", "seeder"],
  "ts-node": {
    "transpileOnly": true
  }
}
